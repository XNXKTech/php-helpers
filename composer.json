{
    "name": "xnxk/helpers",
    "description": "Provides backwards compatibility for helpers in the XNXK Tech.",
    "keywords": ["helpers"],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Teakowa",
            "email": "git@teakowa.dev"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-zlib": "*",
        "coduo/php-humanizer": "^4.0",
        "sadok-f/docker-secrets": "^1.0",
        "teakowa/cryptomute": "^1.4.3",
        "tuupola/base62": "^2.0",
        "webpatser/laravel-uuid": "^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.11.0",
        "illuminate/support": "^8.0",
        "nunomaduro/collision": "^5.1",
        "nunomaduro/phpinsights": "^2.0",
        "pestphp/pest": "^1.21",
        "phpunit/phpunit": "^9.0",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.x-dev"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "composer-validate": "@composer validate --no-check-all --strict --ansi",
        "test": "vendor/bin/phpunit",
        "test-lowest": [
            "composer update --prefer-lowest --prefer-dist --no-interaction --ansi",
            "@test"
        ],
        "test-stable": [
            "composer update --prefer-stable --prefer-dist --no-interaction --ansi",
            "@test"
        ],
        "check": [
            "@composer-validate",
            "@test"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
